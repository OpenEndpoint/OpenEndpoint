# OpenEndpoint Environment Configuration
# Copy this file to .env and customize

# Server Configuration
OPENEP_SERVER_HOST=0.0.0.0
OPENEP_SERVER_PORT=9000
OPENEP_LOG_LEVEL=info

# Storage Configuration
OPENEP_STORAGE_DATA_DIR=/data
OPENEP_STORAGE_MAX_OBJECT_SIZE=5368709120
OPENEP_STORAGE_MAX_BUCKETS=100
OPENEP_STORAGE_STORAGE_BACKEND=flatfile

# Authentication
OPENEP_AUTH_SECRET_KEY=your-secret-key-here
OPENEP_AUTH_ACCESS_KEY=your-access-key-here
OPENEP_AUTH_SESSION_EXPIRY=24

# Cluster Configuration (optional)
OPENEP_CLUSTER_ENABLED=false
OPENEP_CLUSTER_NODE_ID=
OPENEP_CLUSTER_BIND_ADDR=0.0.0.0
OPENEP_CLUSTER_PEER_PORTS=9001

# Metrics Configuration
OPENEP_METRICS_ENABLED=true
OPENEP_METRICS_PORT=9090
OPENEP_METRICS_PATH=/metrics
